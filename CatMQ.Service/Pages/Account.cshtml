@page "/account/{AccountId}"
@using NTDLS.Helpers
@model AccountModel
@{
    ViewData["Title"] = "Account";
}

<div>
    <div class="container mt-4">
        <form method="post" asp-page-handler="SaveAccount">
            <div class="card">
                <div class="card-header">
                    <h4>Account</h4>
                </div>
                <div class="card-body">

                    <div class="mb-3">
                        <label for="username" class="form-label fw-bold">Username</label>
                        <span asp-validation-for="Account.Username" class="text-danger"></span>
                        <input type="text" id="username" class="form-control" asp-for="Account.Username">
                    </div>

                    <div class="mb-3">
                        <label for="firstName" class="form-label fw-bold">First Name</label>
                        <span asp-validation-for="Account.FirstName" class="text-danger"></span>
                        <input type="text" id="firstName" class="form-control" asp-for="Account.FirstName">
                    </div>

                    <div class="mb-3">
                        <label for="lastName" class="form-label fw-bold">Last Name</label>
                        <span asp-validation-for="Account.LastName" class="text-danger"></span>
                        <input type="text" id="lastName" class="form-control" asp-for="Account.LastName">
                    </div>


                    <div class="mb-3">
                        <label for="timeZone" class="form-label fw-bold">Time Zone</label>
                        <span asp-validation-for="Account.TimeZone" class="text-danger"></span>
                        <select id="timeZone" class="form-select" asp-for="Account.TimeZone" asp-items="@(new SelectList(Model.TimeZones, "Value", "Text"))">
                            <option value="">Select a time zone</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label fw-bold">Change Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <input type="text" id="password" class="form-control" asp-for="Password" autocomplete="new-password-no-auto-fill">
                    </div>

                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
            <br />

        </form>

        <form method="post" asp-page-handler="AddAPIKey">
            <div class="card">
                <div class="card-header">
                    <h4>API Keys</h4>
                </div>
                <div class="card-body">

                    @if ((Model.Account.ApiKeys?.Count ?? 0) > 0)
                    {
                        <table class="table table-striped table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Key</th>
                                    <th>Description</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var apiKey in Model.Account.ApiKeys)
                                {
                                    <tr>
                                        <td>
                                            <a href="/ApiKey/@Model.AccountId/@apiKey.Id">@apiKey.Key</a>
                                        </td>
                                        <td>
                                            @apiKey.Description
                                        </td>

                                        <td>
                                            @Html.Raw(
                                                ConfirmActionHelper.GenerateDangerLink(
                                                        $"Deleting api key {apiKey.Key} will cause trouble! Continue?",
                                                        "Delete",
                                                        $"/DeleteApiKey/{@Model.AccountId}/{@apiKey.Id}",
                                                        "DeleteApiKey")
                                            )
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </div>
        </form>

    </div>
</div>