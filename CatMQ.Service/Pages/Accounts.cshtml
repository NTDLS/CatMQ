@page
@using NTDLS.Helpers
@model AccountsModel
@{
    ViewData["Title"] = "Accounts";
}

<div>
    <div class="container mt-4">
        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Username</th>
                    <th>Person Name</th>
                    <th>Time-zone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in Model.Accounts)
                {
                    <tr>
                        <td>
                            <a href="/Account/@account.Username">@account.Username</a>
                        </td>
                        <td>
                            @account.FirstName  @account.LastName
                        </td>
                        <td>
                            @account.TimeZone
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
