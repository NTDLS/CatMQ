@page "/queue/{QueueName}"
@model QueueModel
@{
    ViewData["Title"] = $"{@Model.QueueName} Queue";
}

@section Scripts {
    <script>
        const fmt = n => n.toLocaleString();

        window.chartDataUrl = '@Url.Page(null, "ChartData", new { queueName = Model.QueueName })';

        document.addEventListener("DOMContentLoaded", async function () {
            await refreshQueueData();
            setInterval(refreshQueueData, 5000);
        });

        async function loadQueueData() {
            const url = '@Url.Page(null, "QueueData", new { queueName = Model.QueueName })';;
            const response = await fetch(url);
            if (!response.ok) {
                console.error("Failed to load queue data:", response.status, response.statusText);
                return null;
            }
            return await response.json();
        }


        async function refreshQueueData() {
            const data = await loadQueueData();
            document.getElementById('q-subscribers').textContent   = fmt(data.currentSubscriberCount);
            document.getElementById('q-depth-link').textContent    = fmt(data.queueDepth);
            document.getElementById('q-outstanding').textContent   = fmt(data.currentOutstandingDeliveries);
            document.getElementById('q-received').textContent      = fmt(data.receivedMessageCount);
            document.getElementById('q-delivered').textContent     = fmt(data.deliveredMessageCount);
            document.getElementById('q-deferred').textContent      = fmt(data.deferredDeliveryCount);
            document.getElementById('q-expired').textContent       = fmt(data.expiredMessageCount);
            document.getElementById('q-failed').textContent        = fmt(data.failedDeliveryCount);
        }

    </script>
    <script src="~/js/queueChart.js"></script>
}

<div>
    <h6 class="display-6">@Model.Queue.QueueName</h6>

    <div class="container mt-4">

        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th colspan="8">Configuration</th>
                </tr>
            </thead>
            <thead class="table-light">
                <tr>
                    <th>Persistence</th>
                    <th>Consumption</th>
                    <th>Delivery</th>
                    <th>Max. Outstanding</th>
                    <th>Throttle</th>
                    <th>Retries</th>
                    <th>Expiration</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Queue.PersistenceScheme</td>
                    <td>@Model.Queue.ConsumptionScheme</td>
                    <td>@Model.Queue.DeliveryScheme</td>
                    <td>@Model.Queue.MaxOutstandingDeliveries</td>
                    <td>@Model.Queue.DeliveryThrottle</td>
                    <td>@Model.Queue.MaxDeliveryAttempts</td>
                    <td>@Model.Queue.MaxMessageAge</td>
                    <td>@Html.Raw(ConfirmActionHelper.GenerateDangerLink(
                        $"Deleting the queue '{@Model.Queue.QueueName}' will result in permanent message loss and any subscribers will fail. Continue?",
                        "Delete", $"/DeleteQueue/{@Model.Queue.QueueName}", "btn-thin"))
                    </td>
                </tr>
            </tbody>
        </table>

        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th colspan="9">Statistics</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="9">
                        <canvas id="queueChart" height="50"></canvas>
                    </td>
                </tr>
            </tbody>

            <thead class="table-light">
                <tr>
                    <th>Subscribers</th>
                    <th>Depth</th>
                    <th>Outstanding</th>
                    <th>Received</th>
                    <th>Delivered</th>
                    <th>Deferred</th>
                    <th>Expired</th>
                    <th>Failures</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td id="q-subscribers"></td>
                    <td><a id="q-depth-link" href="/messages/@Model.Queue.QueueName">...</a></td>
                    <td id="q-outstanding"></td>
                    <td id="q-received"></td>
                    <td id="q-delivered"></td>
                    <td id="q-deferred"></td>
                    <td id="q-expired"></td>
                    <td id="q-failed"></td>
                    <td>
                        @Html.Raw(ConfirmActionHelper.GenerateDangerLink(
                            $"Purging the queue '{@Model.Queue.QueueName}' will result in permanent message loss. Continue?",
                            "Purge", $"/PurgeQueue/{@Model.Queue.QueueName}", "btn-thin"))
                    </td>
                </tr>
            </tbody>
        </table>

        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th colspan="8">Subscribers</th>
                </tr>
            </thead>
            <thead class="table-light">
                <tr>
                    <th>SubscriberId</th>
                    <th>Address</th>
                    <th>Attempts</th>
                    <th>Successful</th>
                    <th>Deferred</th>
                    <th>Consumed</th>
                    <th>Failures</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var queue in Model.Subscribers)
                {
                    <tr>
                        <td>@queue.SubscriberId</td>
                        <td>@queue.RemoteAddress : @queue.RemotePort</td>
                        <td>@queue.AttemptedDeliveryCount.ToString("n0")</td>
                        <td>@queue.SuccessfulDeliveryCount.ToString("n0")</td>
                        <td>@queue.DeferredDeliveryCount.ToString("n0")</td>
                        <td>@queue.ConsumedDeliveryCount.ToString("n0")</td>
                        <td>@queue.FailedDeliveryCount.ToString("n0")</td>
                        <td>@Html.Raw(ConfirmActionHelper.GenerateDangerLink(
                            $"Removing the subscription for '{@queue.SubscriberId}' from '{@Model.Queue.QueueName}' will cause the subscriber to fail. Continue?",
                            "Remove", $"/RemoveSubscription/{@Model.Queue.QueueName}/{@queue.SubscriberId}", "btn-thin"))
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
